<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE tiles-definitions PUBLIC  
      "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
      "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
      
<tiles-definitions>  
 
   <!-- Layout -->
   <definition name="layout" template="/tiles/layouts/layout.jsp"> 
       <put-attribute name="title" 	value="Online shop" />  
       <put-attribute name="header" value="/tiles/partials/header.jsp" />  
       <put-attribute name="menu" 	value="/tiles/partials/menu.jsp" />  
       <put-attribute name="body" 	value="/tiles/partials/body.jsp" />  
       <put-attribute name="footer" value="/tiles/partials/footer.jsp" />  
   </definition>  
 
   <!-- Content -->	
   <!-- Home -->
   <definition name="home" extends="layout">  
       <put-attribute name="body" 	value="/tiles/content/home.jsp"/>  
   </definition>  
   
   <!-- Auth -->
   <definition name="auth" extends="layout">  
       <put-attribute name="body" 	value="/tiles/content/auth/auth.jsp"/>  
   </definition>  
   
   <!-- Product -->
   <definition name="products" extends="layout">  
       <put-attribute name="body" 	value="/tiles/content/product/products.jsp"/>  
   </definition>  
   
   <definition name="product-detail" extends="layout">  
       <put-attribute name="body" 	value="/tiles/content/product/product-detail.jsp"/>  
   </definition>  
   
   <definition name="cart" extends="layout">  
       <put-attribute name="body" 	value="/tiles/content/product/cart.jsp"/>  
   </definition>  
   
   <definition name="manage-products" extends="layout">  
       <put-attribute name="body" 	value="/tiles/content/product/manage-products.jsp"/>  
   </definition>  
   
</tiles-definitions>